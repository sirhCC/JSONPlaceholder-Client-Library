{
  "name": "jsonplaceholder-client-lib",
  "version": "1.0.0",
  "description": "A TypeScript library that provides a simple, type-safe interface for interacting with the JSONPlaceholder API. Features comprehensive CRUD operations, advanced filtering & pagination, robust error handling, intelligent caching & performance optimization, and full TypeScript support.",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/esm/core.js",
      "require": "./dist/core.js",
      "types": "./dist/core.d.ts"
    },
    "./caching": {
      "import": "./dist/esm/caching.js",
      "require": "./dist/caching.js",
      "types": "./dist/caching.d.ts"
    },
    "./logging": {
      "import": "./dist/esm/logging.js",
      "require": "./dist/logging.js",
      "types": "./dist/logging.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node tests/integration/test-package.js && node tests/integration/test-react-package.js",
    "test:validate": "node tests/integration/validate-packages.js",
    "demo:server": "node tests/demos/demo-server.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx --max-warnings 0",
    "prepublishOnly": "npm run clean && npm run build && npm test && npm run test:integration",
    "prepare": "npm run build"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "rimraf": "^5.0.0",
    "semantic-release": "^22.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sirhCC/client-library.git"
  },
  "keywords": [
    "api",
    "client",
    "library",
    "jsonplaceholder",
    "typescript",
    "rest",
    "http",
    "caching",
    "pagination",
    "filtering",
    "interceptors",
    "promise",
    "async"
  ],
  "author": "sirhCC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sirhCC/client-library/issues"
  },
  "homepage": "https://github.com/sirhCC/client-library#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
